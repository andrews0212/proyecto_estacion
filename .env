# === CONFIGURACIÓN DE BASE DE DATOS ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=1234
DB_TABLE=sensor_readings

# === CONFIGURACIÓN MINIO ===
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=datalake
MINIO_SECURE=false

# === CONFIGURACIÓN ETL ===
# Capas del Data Lake
BRONZE_PATH=bronze/sensor_data
SILVER_PATH=silver/sensor_data
GOLD_PATH=gold/sensor_kpis

# Configuración de batch processing
BATCH_SIZE=1000
PROCESSING_INTERVAL_MINUTES=30

# === CONFIGURACIÓN SPARK ===
SPARK_DRIVER_MEMORY=2g
SPARK_EXECUTOR_MEMORY=2g
SPARK_EXECUTOR_CORES=2

# === CONFIGURACIÓN DE LOGS ===
LOG_LEVEL=INFO
LOG_PATH=logs/etl.log